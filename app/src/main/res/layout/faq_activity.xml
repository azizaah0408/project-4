<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/backgroundTheme"
    android:layout_marginTop="35dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_faq"
        android:text="Frequently Asked Questions"
        android:fontFamily="@font/baloo"
        android:textColor="@color/black"
        android:textSize="27sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq1"
        android:text="How To Upload?"
        android:fontFamily="@font/baloo"
        android:textSize="17sp"
        android:layout_below="@id/title_faq"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq2"
        android:layout_below="@id/text_faq1"
        android:text="Long-press the image, select 'Update', edit the details, and click the 'Update' button."
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq3"
        android:layout_below="@+id/text_faq2"
        android:text="How To Update Image?"
        android:fontFamily="@font/baloo"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq4"
        android:layout_below="@+id/text_faq3"
        android:text="Long-press the image, select 'Update', edit the details, and click the 'Update' button.

    "
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq5"
        android:layout_below="@+id/text_faq4"
        android:text="How To Delete Image?"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_faq6"
        android:layout_below="@+id/text_faq5"
        android:text="Long-press the image, choose 'Delete', confirm the action, and the image will be removed.."
        android:textColor="@color/black"/>

</RelativeLayout>
